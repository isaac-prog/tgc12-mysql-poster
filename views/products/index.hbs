{{#extends 'base'}}

{{#block 'content'}}
<h1>List</h1>
<form method="GET">
   {{{form}}}
    <input type="submit" class="mb-3 mt-3 btn btn-primary" value="Search"/>
</form>


<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Category</th>
            <th>Cost</th>
            <th>Description</th>
            <th>Image</th>
            <th></th>
        </tr>

    </thead>
    <tbody>
        {{#each products}}
            <tr>
                <td>
                    {{this.id}}
                </td>
                <td>
                    {{this.name}}
                </td>
                <td>
                {{this.category.name}}
                </td>
                <td>
                    {{this.cost}}
                </td>
                <td>
                    {{this.description}}
                </td>
                <td>
                    {{#if product.image_url}}
                    <img src="{{product.image_url}}" id="uploaded_image" />
                    {{else}}
                    <img src="" style="display:none" id="uploaded_image" />
                    {{/if}}
                </td>
                <td>
                <a href="/cart/{{this.id}}/add" class="btn btn-success btn-sm">Add to cart</a>
                <a href="/products/{{this.id}}/update" class="btn btn-primary btn-sm">Update</a>
                <a href="/products/{{this.id}}/delete" class="btn btn-danger btn-sm">Delete</a>
            </td>
            </tr>
        {{/each}}
    </tbody>
</table>
<a href="/products/create" class="btn btn-primary btn-sm">Add content</a>
{{/block}}

{{/extends}}

